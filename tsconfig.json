{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@pages/*": ["tests/pages/*"],
            "@fixtures/*": ["tests/fixtures/*"]
        }
    },
    "include": ["tests/**/*.ts", "playwright.config.ts"],
    "exclude": ["node_modules"]
}